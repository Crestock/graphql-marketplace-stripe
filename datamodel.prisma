type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  customer: Customer!
  account: MerchantAccount
}

type Customer {
  id: ID! @unique
  stripe_id: String! @unique
  has_open_disputes: Boolean! @default(value: false)
}

enum MerchantVerificationStatus {
  PENDING
  UNVERIFIED
  VERIFIED
}

type MerchantAccount {
  id: ID! @unique
  stripe_id: String! @unique
  country: String!
  business_name: String
  charges_enabled: Boolean
  payouts_enabled: Boolean
  default_payout_currency: String!
  verification_status: MerchantVerificationStatus!
}
